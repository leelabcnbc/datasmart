{
  "title": "Schema for a CORTEX experiment",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "monkey": {
      "type": "string"
    },
    "code_repo": {
      "type": "object",
      "properties": {
        "repo_url": {
          "type": "string",
          "format": "uri"
        },
        "repo_hash": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{40}$"
        }
      },
      "required": [
        "repo_url",
        "repo_hash"
      ],
      "additionalProperties": false
    },
    "experiment_name": {
      "type": "string"
    },
    "recorded_files": {
      "type": "object",
      "properties": {
        "site": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "local": {
              "type": "boolean"
            }
          },
          "required": ["path", "local"]
        },
        "filelist": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(/[^/]+)+$"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": ["site", "filelist"],
      "additionalProperties": false
    },
    "additional_parameters": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "timestamp",
    "monkey",
    "code_repo",
    "experiment_name",
    "recorded_files",
    "additional_parameters",
    "notes"
  ],
  "additionalProperties": false
}
